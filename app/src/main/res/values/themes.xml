<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TrendySteps" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <!--        System Ui configuration-->
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.TrendySteps" parent="Base.Theme.TrendySteps" />


<!--Other Style by splashScreen-->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.TrendySteps</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
<!--    Style image brand -->
    <style name="style_brand_image">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:src">@drawable/img</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:contentDescription">@string/image_brand</item>
    </style>
<!--    Style text welcome-->
    <style name="welcome_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
    </style>

<!--    style textInput-->
    <style name="style_text_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--style button auth -->
    <style name="style_auth_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:enabled">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/status_text_color</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>